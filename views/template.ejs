<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resume Preview</title>
  <link rel="icon" href="/images/logo_crop.png" type="image/x-icon">
  
</head>

<% let colors = ["#FFDAB9", "#E6E6FA", "#FFFACD", "#E0FFFF", "#F0FFF0", "#FFE4E1"]; %>

<body style="font-family: Arial, sans-serif; line-height: 1.5; margin: 20px; background-color: <%= colors[parseInt(data.templateId) - 1] %>;">

  <h1 style="text-align: center;">You chose template: <%= data.templateId %>
  </h1>

  <!-- Personal Info -->
  <section style="margin-bottom: 20px;">
    <h2 style="border-bottom: 1px solid #000;">Personal Info</h2>
    <% data.personal_info.forEach(person=> { %>
      <p><strong>Name:</strong>
        <%= person.full_name %>
      </p>
      <p><strong>Phone:</strong>
        <%= person.phone %>
      </p>
      <p><strong>Email:</strong>
        <%= person.email %>
      </p>
      <p><strong>Address:</strong>
        <%= person.address %>
      </p>
      <p><strong>LinkedIn:</strong> <a href="<%= person.linkedin %>" target="_blank">
          <%= person.linkedin %>
        </a></p>
      <p><strong>GitHub:</strong> <a href="<%= person.github %>" target="_blank">
          <%= person.github %>
        </a></p>
      <p><strong>Portfolio:</strong> <a href="<%= person.portfolio %>" target="_blank">
          <%= person.portfolio %>
        </a></p>
      <% }) %>
  </section>

  <!-- Education -->
  <section style="margin-bottom: 20px;">
    <h2 style="border-bottom: 1px solid #000;">Education</h2>
    <% data.education.forEach(edu=> { %>
      <p><strong>Degree:</strong>
        <%= edu.degree %>
      </p>
      <p><strong>Institution:</strong>
        <%= edu.institution %> (<%= edu.city %>, <%= edu.state %>)
      </p>
      <p><strong>Years:</strong>
        <%= edu.start_year %> - <%= edu.end_year %>
      </p>
      <p><strong>Grade:</strong>
        <%= edu.grade %>
      </p>
      <% }) %>
  </section>

  <!-- Coursework -->
  <section style="margin-bottom: 20px;">
    <h2 style="border-bottom: 1px solid #000;">Coursework</h2>
    <ul>
      <% data.coursework.forEach(course=> { %>
        <li>
          <%= course.course_name %>
        </li>
        <% }) %>
    </ul>
  </section>

  <!-- Experience -->
  <section style="margin-bottom: 20px;">
    <h2 style="border-bottom: 1px solid #000;">Experience</h2>
    <% data.experience.forEach(exp=> { %>
      <p><strong>Role:</strong>
        <%= exp.role_name %> at <%= exp.company_name %> (<%= exp.city %>, <%= exp.state %>)
      </p>
      <p><strong>Duration:</strong>
        <%= exp.start_date %> - <%= exp.end_date %>
      </p>
      <p><strong>Description:</strong>
        <%= exp.description %>
      </p>
      <% }) %>
  </section>

  <!-- Projects -->
  <section style="margin-bottom: 20px;">
    <h2 style="border-bottom: 1px solid #000;">Projects</h2>
    <% data.projects.forEach(proj=> { %>
      <p><strong>Project:</strong>
        <%= proj.project_name %> (<%= proj.project_date %>)
      </p>
      <p><strong>Tech Stack:</strong>
        <%= proj.tech_stack %>
      </p>
      <p><strong>Description:</strong>
        <%= proj.project_description %>
      </p>
      <p>
        <a href="<%= proj.live_link %>" target="_blank">Live</a> |
        <a href="<%= proj.github_link %>" target="_blank">GitHub</a>
      </p>
      <hr>
      <% }) %>
  </section>

  <!-- Technical Skills -->
  <section style="margin-bottom: 20px;">
    <h2 style="border-bottom: 1px solid #000;">Technical Skills</h2>
    <% data.technical_skills.forEach(skill=> { %>
      <p><strong>Languages:</strong>
        <%= skill.languages %>
      </p>
      <p><strong>Tools:</strong>
        <%= skill.developer_tools %>
      </p>
      <p><strong>Frameworks/Technologies:</strong>
        <%= skill.technologies_or_frameworks %>
      </p>
      <% }) %>
  </section>

  <!-- Extracurricular -->
  <section style="margin-bottom: 20px;">
    <h2 style="border-bottom: 1px solid #000;">Extracurricular</h2>
    <% data.extracurricular.forEach(activity=> { %>
      <p><strong>Title:</strong>
        <%= activity.title %> (<%= activity.start_date %> - <%= activity.end_date %>)
      </p>
      <p><strong>Role:</strong>
        <%= activity.role %>
      </p>
      <p><strong>Description:</strong>
        <%= activity.description %>
      </p>
      <% }) %>
  </section>

</body>

</html>